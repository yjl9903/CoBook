{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "types": ["@cloudflare/workers-types"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@cobook/shared": ["../shared/src/index.ts"]
    }
  },
  "include": ["src/**/*", "bindings.d.ts"],
  "exclude": ["node_modules", "dist"]
}